{
  "name": "Lecture",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Title of the lecture"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Date of the lecture"
    },
    "audio_url": {
      "type": "string",
      "description": "URL to the uploaded audio file"
    },
    "duration": {
      "type": "number",
      "description": "Duration of audio in seconds"
    },
    "transcription": {
      "type": "string",
      "description": "Full transcription of the audio"
    },
    "summary": {
      "type": "string",
      "description": "AI-generated summary of the lecture"
    },
    "category": {
      "type": "string",
      "description": "Auto-detected category/topic"
    },
    "key_points": {
      "type": "array",
      "description": "List of key points from the lecture",
      "items": {
        "type": "object",
        "properties": {
          "point": {
            "type": "string"
          },
          "timestamp": {
            "type": "string"
          },
          "importance": {
            "type": "string",
            "enum": [
              "high",
              "medium",
              "normal"
            ]
          }
        }
      }
    },
    "exam_hints": {
      "type": "array",
      "description": "Important exam-related points with timestamps",
      "items": {
        "type": "object",
        "properties": {
          "hint": {
            "type": "string"
          },
          "timestamp": {
            "type": "string"
          }
        }
      }
    },
    "processing_status": {
      "type": "string",
      "enum": [
        "uploading",
        "processing",
        "completed",
        "failed"
      ],
      "default": "uploading"
    }
  },
  "required": [
    "title",
    "date"
  ]
}