{
  "name": "Flashcard",
  "type": "object",
  "properties": {
    "lecture_id": {
      "type": "string",
      "description": "ID of the associated lecture"
    },
    "question": {
      "type": "string",
      "description": "Question on the front of the flashcard"
    },
    "answer": {
      "type": "string",
      "description": "Answer on the back of the flashcard"
    },
    "category": {
      "type": "string",
      "description": "Category of the flashcard"
    },
    "difficulty": {
      "type": "string",
      "enum": [
        "easy",
        "medium",
        "hard"
      ],
      "default": "medium"
    }
  },
  "required": [
    "lecture_id",
    "question",
    "answer"
  ]
}